<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/disease_library_left_item_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/disease_library_left_item_image1"
        android:layout_width="@dimen/x12"
        android:layout_height="@dimen/y112" />

    <ImageView
        android:id="@+id/disease_library_left_item_image2"
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/x50"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x28"
        android:layout_toRightOf="@id/disease_library_left_item_image1" />

    <TextView
        android:id="@+id/disease_library_left_item_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x36"
        android:layout_toRightOf="@id/disease_library_left_item_image2"
        android:textColor="#323232"
        android:textSize="@dimen/y32" />


</RelativeLayout>