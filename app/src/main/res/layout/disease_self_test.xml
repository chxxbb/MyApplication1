<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/disease_self_test_title_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_alignParentTop="true"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="疾病自测"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x36" />

        <ImageView
            android:id="@+id/disease_self_test_exit"
            android:layout_width="@dimen/x32"
            android:layout_height="@dimen/x32"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x40"
            android:src="@mipmap/registered_exit" />


    </RelativeLayout>

    <View
        android:id="@+id/fuck"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_below="@id/disease_self_test_title_relativelayout"
        android:background="#666666" />

    <ListView
        android:id="@+id/disease_self_test_listview"
        android:layout_width="@dimen/x210"
        android:layout_height="match_parent"
        android:layout_below="@id/fuck"
        android:background="#f4f4f4">

    </ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/disease_self_test_title_relativelayout"
        android:layout_toRightOf="@id/disease_self_test_listview" />

</RelativeLayout>