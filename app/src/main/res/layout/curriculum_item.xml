<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/y18"
    android:paddingTop="@dimen/y18">

    <TextView
        android:id="@+id/curriculum_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#323232"
        android:textSize="@dimen/y26" />

    <TextView
        android:id="@+id/curriculum_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/curriculum_item_text"
        android:textColor="#666666"
        android:textSize="@dimen/y26" />

    <TextView
        android:id="@+id/curriculum_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="#999999"
        android:textSize="@dimen/y26" />

</RelativeLayout>