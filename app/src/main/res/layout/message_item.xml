<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/y16"
    android:paddingLeft="@dimen/x40"
    android:paddingRight="@dimen/x40"
    android:paddingTop="@dimen/y16">

    <ImageView
        android:id="@+id/message_item_imageview"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x100"
        android:layout_centerVertical="true"
        android:src="@mipmap/message_item_image_convention" />

    <TextView
        android:id="@+id/messagr_item_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_toRightOf="@id/message_item_imageview"
        android:gravity="top"
        android:text="预约消息"
        android:textColor="#323232"
        android:textSize="@dimen/y30" />

    <TextView
        android:id="@+id/messagr_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/messagr_item_content_title"
        android:layout_below="@id/messagr_item_content_title"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="您好,我这里撒滴定法对方阿道夫阿道夫阿道夫空间律法规建设分开过"
        android:textColor="#666666"
        android:textSize="@dimen/y26" />

    <TextView
        android:id="@+id/message_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="上午10:40"
        android:textColor="#bbbbbc"
        android:textSize="@dimen/y24" />

</RelativeLayout>