<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white">


    <RelativeLayout
        android:id="@+id/home_title_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y450">

        <View
            android:id="@+id/home_top__title_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88"
            android:background="@android:color/white" />

        <com.youth.banner.Banner
            android:id="@+id/home_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y360"
            android:layout_below="@id/home_top__title_view" />

        <ImageView
            android:id="@+id/home_qr_code_imageview"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y28"
            android:src="@mipmap/home_qr_code" />

        <ImageView
            android:id="@+id/home_message_imageview"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginTop="@dimen/y28"
            android:src="@mipmap/home_messages" />

        <EditText
            android:id="@+id/home_search_edittext"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y44"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginTop="@dimen/y28"
            android:layout_toLeftOf="@id/home_message_imageview"
            android:layout_toRightOf="@id/home_qr_code_imageview"
            android:background="@drawable/home_edittext"
            android:drawablePadding="@dimen/x15"
            android:gravity="center"
            android:hint="医生、儿科医生、儿科疾病"
            android:paddingLeft="@dimen/x64"
            android:paddingRight="@dimen/x20"
            android:paddingTop="@dimen/y5"
            android:singleLine="true"
            android:textSize="@dimen/x24" />

        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y24"
            android:layout_alignLeft="@id/home_search_edittext"
            android:layout_alignTop="@id/home_search_edittext"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y10"
            android:src="@mipmap/home_title_search_image" />


    </RelativeLayout>

    <TextView
        android:id="@+id/home_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_title_relativelayout"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/y20"
        android:text="看病问诊  /"
        android:textColor="#666666"
        android:textSize="@dimen/x24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/home_text1"
        android:layout_marginLeft="@dimen/x5"
        android:layout_toRightOf="@id/home_text1"
        android:text="THE DOCTOR INIERROGATION"
        android:textColor="#666666"
        android:textSize="@dimen/x16" />

    <View
        android:id="@+id/home_top_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_below="@id/home_text1"
        android:layout_marginTop="@dimen/y20"
        android:background="#bbbbbc" />

    <View
        android:id="@+id/home_content_view"
        android:layout_width="@dimen/x1"
        android:layout_height="@dimen/y300"
        android:layout_below="@id/home_top_view"
        android:layout_centerHorizontal="true"
        android:background="#bbbbbc" />

    <View
        android:id="@+id/home_botton_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y1"
        android:layout_below="@id/home_top_view"
        android:layout_marginTop="@dimen/y200"
        android:layout_toRightOf="@id/home_content_view"
        android:background="#bbbbbc" />

    <View
        android:id="@+id/home_right_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y1"
        android:layout_below="@id/home_top_view"
        android:layout_marginTop="@dimen/y100"
        android:layout_toRightOf="@id/home_content_view"
        android:background="#bbbbbc" />

    <ImageView
        android:layout_width="@dimen/x254"
        android:layout_height="@dimen/x196"
        android:layout_below="@id/home_top_view"
        android:layout_marginLeft="@dimen/x110"
        android:layout_marginTop="@dimen/y100"
        android:src="@mipmap/home_interrogation" />

    <TextView
        android:id="@+id/home_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_top_view"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/y20"
        android:text="快速问诊"
        android:textColor="#222222"
        android:textSize="@dimen/x30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_text2"
        android:layout_marginLeft="@dimen/x40"
        android:text="医生在线 免费解答"
        android:textColor="#bbbbbc"
        android:textSize="@dimen/x20" />

    <RelativeLayout
        android:id="@+id/home_top_register"
        android:layout_width="@dimen/x375"
        android:layout_height="@dimen/y100"
        android:layout_alignParentRight="true"
        android:layout_below="@id/home_top_view">

        <ImageView
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginTop="@dimen/y20"
            android:src="@mipmap/home_registration" />

        <TextView
            android:id="@+id/home_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y20"
            android:text="一键挂号"
            android:textColor="#222222"
            android:textSize="@dimen/x30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_text3"
            android:layout_marginLeft="@dimen/x40"
            android:text="儿科医生一键在线预约"
            android:textColor="#bbbbbc"
            android:textSize="@dimen/x20" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_diagnosis_management_relativelayout"
        android:layout_width="@dimen/x375"
        android:layout_height="@dimen/y100"
        android:layout_alignParentRight="true"
        android:layout_below="@id/home_right_view">

        <ImageView
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginTop="@dimen/y20"
            android:src="@mipmap/home_classroom" />

        <TextView
            android:id="@+id/home_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y20"
            android:text="诊疗管理"
            android:textColor="#222222"
            android:textSize="@dimen/x30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_text4"
            android:layout_marginLeft="@dimen/x40"
            android:text="儿科疾病怎么提前预防?"
            android:textColor="#bbbbbc"
            android:textSize="@dimen/x20" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_navigation_relativelayout"
        android:layout_width="@dimen/x375"
        android:layout_height="@dimen/y100"
        android:layout_alignParentRight="true"
        android:layout_below="@id/home_botton_view">

        <ImageView
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginTop="@dimen/y20"
            android:src="@mipmap/home_case_management" />

        <TextView
            android:id="@+id/home_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y20"
            android:text="健康管理"
            android:textColor="#222222"
            android:textSize="@dimen/x30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_text5"
            android:layout_marginLeft="@dimen/x40"
            android:text="个人病例档案详细查询"
            android:textColor="#bbbbbc"
            android:textSize="@dimen/x20" />

    </RelativeLayout>


    <View
        android:id="@+id/home_view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:layout_below="@id/home_navigation_relativelayout"
        android:background="#f4f4f4" />

    <RelativeLayout
        android:id="@+id/home_angel_relayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y270"
        android:layout_below="@id/home_view1"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/home_angel_title_relayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y70">

            <TextView
                android:id="@+id/home_text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x40"
                android:text="天使服务   /"
                android:textColor="#666666"
                android:textSize="@dimen/x24" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/home_text7"
                android:layout_marginLeft="@dimen/x5"
                android:layout_toRightOf="@id/home_text7"
                android:text="THE ANGEL SERVICE"
                android:textColor="#666666"
                android:textSize="@dimen/x16" />

        </RelativeLayout>

        <View
            android:id="@+id/home_angel_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_below="@id/home_angel_title_relayout"
            android:background="#bbbbbc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y200"
            android:layout_below="@id/home_angel_view">

            <View
                android:id="@+id/home_angel_Hconter_view"
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="#bbbbbc" />

            <View
                android:id="@+id/home_angel_Vconter_view"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/home_angel_Hconter_view"
                android:background="#bbbbbc" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y270"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/home_angel_Hconter_view">

                <TextView
                    android:id="@+id/home_angel_Text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x40"
                    android:layout_marginTop="@dimen/y20"
                    android:text="知识讲堂"
                    android:textColor="#222222"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_angel_Text1"
                    android:layout_marginLeft="@dimen/x40"
                    android:text="儿科疾病怎么提前预防?"
                    android:textColor="#bbbbbc"
                    android:textSize="@dimen/x20" />

                <ImageView
                    android:layout_width="@dimen/x200"
                    android:layout_height="@dimen/y94"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/home_angel_classroom_image" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_angel_Disease_library_relativelayout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y100"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/home_angel_Hconter_view">

                <TextView
                    android:id="@+id/home_angel_Text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x40"
                    android:layout_marginTop="@dimen/y20"
                    android:text="儿童疾病库"
                    android:textColor="#222222"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_angel_Text2"
                    android:layout_marginLeft="@dimen/x40"
                    android:text="易用全面疾病百科"
                    android:textColor="#bbbbbc"
                    android:textSize="@dimen/x20" />

                <ImageView
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/x60"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x40"
                    android:src="@mipmap/home_angel_disease_image" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_angel_Map_relativelayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_below="@id/home_angel_Vconter_view"
                android:layout_toRightOf="@id/home_angel_Hconter_view">

                <TextView
                    android:id="@+id/home_angel_Text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x40"
                    android:layout_marginTop="@dimen/y20"
                    android:text="医院导航"
                    android:textColor="#222222"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_angel_Text3"
                    android:layout_marginLeft="@dimen/x40"
                    android:text="一键导航医院详细地址"
                    android:textColor="#bbbbbc"
                    android:textSize="@dimen/x20" />

                <ImageView
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/x60"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x40"
                    android:src="@mipmap/home_angel_navigation_image" />

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

    <View
        android:id="@+id/home_view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:layout_below="@id/home_angel_relayout"
        android:background="#f4f4f4" />

    <RelativeLayout
        android:id="@+id/home_doctor_warehouse_relayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y70"
        android:layout_below="@id/home_view2">

        <TextView
            android:id="@+id/home_text8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x40"
            android:text="名医库   /"
            android:textColor="#666666"
            android:textSize="@dimen/x24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x40"
            android:text=">"
            android:textColor="#666666"
            android:textSize="@dimen/x24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/home_text8"
            android:layout_marginLeft="@dimen/x5"
            android:layout_toRightOf="@id/home_text8"
            android:text="MEDICAL LIBRARY"
            android:textColor="#666666"
            android:textSize="@dimen/x16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/y20"
            android:background="#bbbbbc" />

    </RelativeLayout>


</RelativeLayout>
