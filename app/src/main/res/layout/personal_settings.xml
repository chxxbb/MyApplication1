<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">

    <RelativeLayout
        android:id="@+id/personal_settings_title_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_alignParentTop="true"
        android:background="#3496d3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x36" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/personal_settings_basic_information_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y174"
        android:layout_below="@id/personal_settings_title_relativelayout"
        android:layout_marginTop="@dimen/y30"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/x40"
        android:paddingRight="@dimen/x40">

    </RelativeLayout>


</RelativeLayout>