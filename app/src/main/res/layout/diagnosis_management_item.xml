<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y85"
    android:paddingLeft="@dimen/x40"
    android:paddingRight="@dimen/x40">

    <TextView
        android:id="@+id/diagnosis_management_item_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#666666"
        android:textSize="@dimen/x32" />

    <TextView
        android:id="@+id/diagnosis_management_item_department_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x230"
        android:textColor="#666666"
        android:textSize="@dimen/x32" />

    <ImageView
        android:layout_width="@dimen/x16"
        android:layout_height="@dimen/y26"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/diagnosis_department_item_image" />

</RelativeLayout>