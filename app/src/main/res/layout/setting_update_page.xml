<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">

    <RelativeLayout
        android:id="@+id/setting_update_page_title_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_alignParentTop="true"
        android:background="#3496d3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="检查更新"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x36" />

        <ImageView
            android:id="@+id/setting_update_page_exit"
            android:layout_width="@dimen/x32"
            android:layout_height="@dimen/x32"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x40"
            android:src="@mipmap/registered_exit" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/setting_update_page_logo"
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/x120"
        android:layout_below="@id/setting_update_page_title_relativelayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y40"
        android:background="@drawable/shape" />

    <TextView
        android:id="@+id/setting_update_page_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_update_page_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y40"
        android:text="版本号 1.2.0"
        android:textColor="#323232"
        android:textSize="@dimen/y32" />

    <RelativeLayout
        android:id="@+id/setting_update_page_update_change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_below="@id/setting_update_page_number"
        android:layout_marginTop="@dimen/y60"
        android:background="@android:color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="#e0e0e0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x40"
            android:gravity="center_vertical"
            android:text="升级到新版本"
            android:textColor="#323232"
            android:textSize="@dimen/y32" />

        <ImageView
            android:layout_width="@dimen/x16"
            android:layout_height="@dimen/y26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x40"
            android:src="@mipmap/diagnosis_department_item_image" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_alignParentBottom="true"
            android:background="#e0e0e0" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_update_page_news"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_below="@id/setting_update_page_update_change"
        android:background="@android:color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="#e0e0e0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x40"
            android:gravity="center_vertical"
            android:text="新功能介绍"
            android:textColor="#323232"
            android:textSize="@dimen/y32" />

        <ImageView
            android:layout_width="@dimen/x16"
            android:layout_height="@dimen/y26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x40"
            android:src="@mipmap/diagnosis_department_item_image" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_alignParentBottom="true"
            android:background="#e0e0e0" />

    </RelativeLayout>

</RelativeLayout>